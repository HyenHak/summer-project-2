<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="첫 번째 숫자"
        android:inputType="number"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="두 번째 숫자"
        android:inputType="number"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:layout_width="90dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/add_button_round"
            android:onClick="addClick"
            android:text="더하기(+)"
            android:textSize="18sp" />


        <Button
            android:id="@+id/subBotton"
            android:layout_width="90dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/sub_button_round"
            android:onClick="subtractClick"
            android:text="뺴기(-)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="90dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/mul_button_round"
            android:onClick="multiplyClick"
            android:text="곱하기(×)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="90dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/div_button_round"
            android:onClick="divideClick"
            android:text="나누기(÷)"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:textSize="24sp"
        android:visibility="visible" />
</LinearLayout>